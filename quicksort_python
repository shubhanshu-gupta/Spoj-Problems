def quicksort(arr):
	less = []
	equal = []
	greater = []

	if len(arr)>1:
		pivot = arr[0]
		for x in arr:
			if x<pivot:
				less.append(x)
			elif x==pivot:
				equal.append(x)
			else:
				greater.append(x)
		return quicksort(less)+equal+quicksort(greater)
	else:
		return arr

arr = [12,4,5,6,7,3,1,15]
print quicksort(arr)